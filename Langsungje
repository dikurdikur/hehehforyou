  <!-- Halaman Penutup -->
  <section id="closing" style="display: none; height: 100vh; display: flex; flex-direction: column; justify-content: center; align-items: center;">
    <h1>Terima kasih sudah menjadi bagian dari hidupku. Aku mencintaimu! ðŸ’–</h1>
    <button onclick="sendLove()">Kirim Cinta</button>
  </section>

  <!-- Confetti -->
  <div id="confetti-container" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none;"></div>

  <script>
    // Fungsi untuk membuka surprise
    function openSurprise() {
      document.getElementById('intro').style.display = 'none';
      document.getElementById('main').style.display = 'block';
      createConfetti();
    }

    // Fungsi untuk membuat confetti
    function createConfetti() {
      const confettiContainer = document.getElementById('confetti-container');
      for (let i = 0; i < 100; i++) {
        const confetti = document.createElement('div');
        confetti.className = 'confetti';
        confetti.style.left = `${Math.random() * 100}vw`;
        confetti.style.animationDuration = `${Math.random() * 3 + 2}s`;
        confettiContainer.appendChild(confetti);
      }
    }

    // Fungsi untuk countdown
    const countdownDate = new Date('2025-12-31').getTime();
    const countdownElement = document.getElementById('countdown');
    const countdownInterval = setInterval(() => {
      const now = new Date().getTime();
      const distance = countdownDate - now;
      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      countdownElement.innerHTML = `Countdown ke Ulang Tahun: ${days} Hari Lagi!`;
    }, 1000);

    // Fungsi untuk game "Cari Hati"
    function findHeart() {
      document.getElementById('heart-message').innerText = 'Kamu menemukan hatiku! ðŸ’–';
    }

    // Fungsi untuk halaman penutup
    function sendLove() {
      document.getElementById('main').style.display = 'none';
      document.getElementById('closing').style.display = 'flex';
    }
  </script>
</body>
